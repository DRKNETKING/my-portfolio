  <script>
    // dynamic year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Projects data
    const projects = {
      1: {
        title: 'Website Toko Online',
        body: 'Website Toko Online — Single page responsive untuk UKM. Peran: Front-end dan integrasi API pembayaran. Teknologi: HTML5, CSS3, Vanilla JS. Hasil: meningkatkan trafik dan conversion rate +18%.',
        demo: '#',
        repo: '#',
        tags: ['HTML','CSS','JavaScript']
      },
      2: {
        title: 'Dashboard Admin',
        body: 'Dashboard Admin — panel manajemen untuk stok dan pesanan. Peran: Front-end developer; membuat komponen tabel & filter. Teknologi: React, REST API.',
        demo: '#',
        repo: '#',
        tags: ['React','API','Tailwind']
      },
      3: {
        title: 'Portfolio Photography',
        body: 'Portfolio Photography — galeri performa tinggi dengan lazy loading dan optimasi gambar. Peran: penerapan teknik optimasi dan SEO.',
        demo: '#',
        repo: '#',
        tags: ['Gatsby','Image Opt','SEO']
      }
    };

    function openModal(id){
      const p = projects[id];
      if(!p) return alert('Proyek tidak ditemukan');
      document.getElementById('modalTitle').textContent = p.title;
      document.getElementById('modalBody').textContent = p.body;
      document.getElementById('modalDemo').href = p.demo;
      document.getElementById('modalRepo').href = p.repo;
      const mb = document.getElementById('modalBackdrop');
      mb.style.display = 'flex';
      document.body.style.overflow = 'hidden';
      // set focus for accessibility
      document.getElementById('modalBackdrop').querySelector('.modal').focus();
    }

    function closeModal(evt){
      // if evt is boolean true (close btn) or clicked backdrop
      if(evt === true || evt.target === document.getElementById('modalBackdrop')){
        document.getElementById('modalBackdrop').style.display = 'none';
        document.body.style.overflow = '';
      }
    }

    // Contact form: open mail client with prefilled content
    function sendEmail(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const subject = document.getElementById('subject').value.trim() || 'Permintaan dari portofolio';
      const message = document.getElementById('message').value.trim();

      const to = 'email@domain.com'; // Ganti dengan emailmu
      const body = encodeURIComponent(
        `Nama: ${name}\nEmail: ${email}\n\nPesan:\n${message}`
      );

      const mailto = `mailto:${to}?subject=${encodeURIComponent(subject)}&body=${body}`;
      window.location.href = mailto;
    }

    // keyboard accessibility: Esc to close
    document.addEventListener('keydown', (ev) => {
      if(ev.key === 'Escape'){
        closeModal(true);
      }
    });

    // scrolling helper
    function scrollToSection(id){
      const el = document.getElementById(id);
      if(el) el.scrollIntoView({behavior:'smooth', block:'start'});
    }

    // filtering logic for toolbar chips
    function filterProjects(type){
      const grid = document.getElementById('projectsGrid');
      const cards = Array.from(grid.querySelectorAll('.project-card'));
      cards.forEach(card => {
        const t = card.getAttribute('data-type') || 'web';
        if(type === 'all' || type === t){
          card.style.display = '';
        } else {
          card.style.display = 'none';
        }
      });
    }

    // filter by tag (clicked tag)
    function filterByTag(tag){
      const grid = document.getElementById('projectsGrid');
      const cards = Array.from(grid.querySelectorAll('.project-card'));
      cards.forEach(card => {
        const id = getProjectIdFromCard(card);
        if(id && projects[id].tags.includes(tag)){
          card.style.display = '';
          // small visual highlight
          card.classList.add('focus-ring');
          setTimeout(()=>card.classList.remove('focus-ring'), 1200);
        } else {
          card.style.display = 'none';
        }
      });
    }

    // helper: map DOM card to project id by matching title text
    function getProjectIdFromCard(card){
      const title = card.querySelector('h3')?.textContent?.trim();
      if(!title) return null;
      for(const [id,p] of Object.entries(projects)){
        if(p.title === title) return Number(id);
      }
      return null;
    }

    // make sure all clickable elements respond correctly without throwing errors
    (function init(){
      // add tabindex to demo/links
      Array.from(document.querySelectorAll('.tag')).forEach(t=>t.setAttribute('role','button'));
      // progressive enhancement: lazy load profile photo if available
      const img = document.getElementById('profilePhoto');
      if(img){ img.loading = 'lazy'; }
    })();
  </script>
</body>
</html>
        </div>
      </div>

